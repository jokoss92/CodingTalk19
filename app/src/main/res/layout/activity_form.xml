<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Form">\
    <TextView
            android:id="@+id/tvEditId" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    <EditText
            android:id="@+id/etNama" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_marginTop="20dp">
        <Button
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:text="Edit"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btnDelete"
                android:layout_weight="1"
                android:text="Hapus"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>